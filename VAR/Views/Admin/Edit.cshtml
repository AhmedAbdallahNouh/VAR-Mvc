@{
    Layout = "_AdimnLayout";
}
@model Admin

<form asp-action="Update" asp-controller="Admin" method="post">
    <input asp-for="Id" hidden value="@Model.Id" />

    <label asp-for="Name"></label>
    <input asp-for="Name" value="@Model.Name" />
   
    <label asp-for="password"></label>
    <input asp-for="password" value="@Model.password" />

    <label asp-for="phone"></label>
    <input asp-for="phone" value="@Model.phone" />

    <label asp-for="Email"></label>
    <input asp-for="Email" value="@Model.Email" />

    <button id="submit-edit-item" type="submit">Save</button>
</form>