@{
    Layout = "_AdimnLayout";
}
@model Playstation

<form asp-action="Edit" asp-controller="PlaystationRoom" method="post">
    <input asp-for="Id" hidden value="@Model.Id" />

    <label asp-for="RoomName"></label>
    <input asp-for="RoomName" value="@Model.RoomName" />

    <label asp-for="Version"></label>
    <input asp-for="Version" value="@Model.Version" />

    <label asp-for="SinglePrice"></label>
    <input asp-for="SinglePrice" value="@Model.SinglePrice" />

    <label asp-for="MultiPrice"></label>
    <input asp-for="MultiPrice" value="@Model.MultiPrice" />

    <button id="submit-edit-playstation-room" type="submit">Save</button>
</form>