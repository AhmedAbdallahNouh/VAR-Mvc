@{
}
@model Order

@if (Model.StartTime != null && Model.OrderItemDetails.Count == 0)
{
    <h3>Just Gaming Order</h3>
}
else if (@Model.StartTime != null && Model.OrderItemDetails.Count != 0)
{
    <h3>Gamin And Items Order</h3>
}
else
{
    <h3>Just Items Order</h3>
}

@*show table if Gaming And Items Order or just gamin order*@
@if(Model.playstationID != null)
{
    <table class="table" id="orders-table">
        <thead>
            <tr>
                <th>StartTime</th>
                <th>EndTime</th>
                <th>Admin Name</th>
                <th>Playstation Room</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                @if (Model.StartTime != null)
                {
                    <td>@Model.StartTime</td>
                }
                else
                {
                    <td>ـــــ</td>
                }
                @if (Model.EndTime != null)
                {
                    <td>@Model.EndTime</td>
                }
                else
                {
                    <td>ـــــ</td>
                }

                @if (Model.Admin != null)
                {
                    <td>@Model.Admin.Name</td>
                }
                else
                {
                    <td>ـــــ</td>

                }
                @if (Model.Playstation != null)
                {
                    <td>@Model.Playstation.RoomName</td>
                }
                else
                {
                    <td>ـــــ</td>
                }



