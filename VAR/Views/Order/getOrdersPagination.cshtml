<button id="filter-by-date" class="btn btn-secondary">Apply Filter</button>

<table id="orders-table">
    <thead>
        <tr>
            <th>StartTime</th>
            <th>EndTime</th>
            <th>Admin Name</th>
            <th>Playstation Room</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orders)
        {
            <tr>
                @if (item.StartTime != null)
                {
                     <td>@item.StartTime</td>
                }
                else
                {
                    <td>ـــــ</td>
                }
                @if (item.EndTime != null)
                {
                    <td>@item.EndTime</td>
                }
                else
                {
                    <td>ـــــ</td>
                }
               
                @if (item.Admin != null)
                {
                    <td>@item.Admin.Name</td>
                }
                else{
                    <td>ـــــ</td>

                }
                @if (item.Playstation != null)
                {
                    <td>@item.Playstation.RoomName</td>
                }
                else
                {
                    <td>ـــــ</td>
                }

                @if (item.StartTime != null && item.OrderItemDetails.Count == 0)
                {
                    <td>Just Gaming</td>
                }
                else if (item.StartTime != null && item.OrderItemDetails.Count != 0)
                {
                    <td>Gamin And Items</td>
                }
                else
                {
                     <td>Just Items</td>
                }

                <td><a class="btn btn-warning" asp-action="getOrderById" asp-controller="Order" asp-route-id="@item.Id">Details</a></td>
               @* <td>
                    <button type="button" class="order-btn btn  btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop" data-rowid="@item.Id">
                    Delete
                    </button>
                </td>*@

            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-sm-12 col-md-7">
        <nav aria-label="...">
            <ul id="pagination-ul" class="pagination">
                <li id="pervious-li" class="page-item disabled">
                    <a class="page-link">Previous</a>
                </li>
                @for(int i =1 ; i<= Model.Page ; i++)
                {
                    <li class="page-item"><a class="page-link" href="#">@i</a></li>
                }
               @* <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item" aria-current="page">
                    <span class="page-link">2</span>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>*@
                <li id="next-li" class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

