@{
    int index = 1;
    Layout = "_AdimnLayout";
}
@model PaginationVM

<a class="btn btn-secondary" asp-action="AddItem" asp-controller="Item">Add New Item</a>

<table>
    <thead>
        <tr>
            <th>StartTime</th>
            <th>EndTime</th>
            <th>Admin Name</th>
            <th>Playstation Room</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orders)
        {
            <tr>
                <td>@item.StartTime</td>
                <td>@item.EndTime</td>
                @if (item.Admin != null)
                {
                    <td>@item.Admin.Name</td>
                }
                else{
                    <td></td>
                }
                @if (item.Playstation != null)
                {
                    <td>@item.Playstation.RoomName</td>
                }
                else
                {
                    <td></td>
                }
                
                <td><a class="btn btn-warning" asp-action="Edit" asp-controller="Item" asp-route-id="@item.Id">Edit</a></td>
                <td>
                    <button type="button" class="order-btn btn  btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop" data-rowid="@item.Id">
                    Delete
                    </button>
                </td>

            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-sm-12 col-md-7">
        <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item disabled">
                    <span class="page-link">Previous</span>
                </li>
                @for(int i =1 ; i<= Model.Page ; i++)
                {
                    <li class="page-item"><a class="page-link" href="#">@i</a></li>
                }
               @* <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item" aria-current="page">
                    <span class="page-link">2</span>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>*@
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

