@model PaginationVM

<a class="btn btn-secondary" asp-action="AddItem" asp-controller="Item">Add New Item</a> 

<button id="filter-by-room" class="btn btn-secondary" >Room</button>
<button id="filter-by-admin" class="btn btn-secondary">Admin</button>
<div class="row">
    <label for="date" class="col-1 col-form-label">Date</label>
    <div class="col-5">
        <input type="date" class="form-control" id="date"/>      
    </div>
</div>

<label for="">Items</label>


<div class="row">
    <label for="select-room" class="col-1 col-form-label">Select Room</label>
    <div class="col-5">
        <select id="select-room" asp-items="ViewBag.playstationRooms" class="form-control">
        <option value="">Choose One</option>
        </select>
    </div>
</div>

<div class="row">
    <label for="select-admin" class="col-1 col-form-label">Select Room</label>
    <div class="col-5">
        <select id="select-admin" asp-items="ViewBag.admins" class="form-control">
            <option value="">Choose One</option>
        </select>
    </div>
</div>

