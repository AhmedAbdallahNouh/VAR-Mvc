@{
    Layout = "_AdimnLayout";
}
@model Item

<form asp-action="Update" asp-controller="Item" method="post">
    <input asp-for="Id" hidden value="@Model.Id" />

    <label asp-for="Name"></label>
    <input asp-for="Name" value="@Model.Name" />

    <label asp-for="Type"></label>
    <input asp-for="Type" value="@Model.Type" />

    <label asp-for="Price"></label>
    <input asp-for="Price" value="@Model.Price" />

    <label asp-for="InStock"></label>
    <input asp-for="InStock" value="@Model.InStock" />

    <button id="submit-edit-item" type="submit">Save</button>
</form>